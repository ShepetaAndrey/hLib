{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": ["eslint:recommended", "plugin:vue/essential"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2019,
    "sourceType": "module"
  },
  "plugins": ["vue"],
  "rules": {
    "comma-dangle": ["warn", "never"],
    "quotes": ["warn", "single"],
    "no-unused-vars": "warn",
    "no-console": "warn",
    "semi": "off"
  }
}
